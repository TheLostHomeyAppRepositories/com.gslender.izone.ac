{
  "name": {
    "en": "AC Controller"
  },
  "energy": {
    "approximation": {
      "usageOn": 2000, 
      "usageOff": 1 
    }
  },
  "class": "thermostat",
  "capabilities": [
    "target_temperature",
    "measure_temperature",
    "fan_mode",
    "thermostat_mode",
    "onoff"
  ],
  "capabilitiesOptions": {
    "measure_temperature": { "decimals": 1},
    "target_temperature": {  "decimals": 1 }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
      {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
              "next": "add_my_devices"
          }
      },
      {
          "id": "add_my_devices",
          "template": "add_devices"
      }
  ]
}